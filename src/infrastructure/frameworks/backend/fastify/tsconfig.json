{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "../../../../",
      "paths": {
        "@src/*": ["src/*"],
        "@domain/*": ["domain/*"],
        "@application/*": ["application/*"],
      },
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
