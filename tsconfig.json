{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "baseUrl": "./src", // Chemin de base pour les alias
      "paths": {
        "@/*": ["*"] // L'alias "@" pointe vers le dossier src
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
  